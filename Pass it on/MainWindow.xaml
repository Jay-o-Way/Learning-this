<Window
    x:Class="PassItOn.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PassItOn"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    <!--
    Width="300"
    Height="400"
    ExtendsContentIntoTitleBar="True"
    Title="Pass it on!"
    -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Menu-->
        <MenuBar Grid.Row="0">
            <MenuBarItem x:Uid="MenuBar_App">
                <MenuFlyoutItem x:Uid="MenuBar_Info">
                    <!--Click="OpenInfo"-->
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xe946;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem x:Uid="MenuBar_Close">
                    <!--Click="Exit"-->
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xe8bb;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuBarItem>
            <MenuBarItem x:Uid="MenuBar_Data">
                <MenuFlyoutItem x:Uid="MenuBar_Import">
                    <!--Click="ImportFromFile"-->
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xe8b5;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem x:Uid="MenuBar_Export">
                    <!--Click="ExportToFile"-->
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xede1;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuBarItem>
        </MenuBar>
        <!--#region Display-->
        <StackPanel Name="RegionDisplay" Grid.Row="1" Visibility="Visible">
            <ComboBox Name="SelectSubject" IsEditable="True" HorizontalAlignment="Stretch"
            TextSubmitted="LoadSubjectData"
            >
                <!--
            ItemsSource="{x:Bind Subjects}"
            -->
                <!--
            https://learn.microsoft.com/uwp/api/windows.ui.xaml.datatemplate?view=winrt-22621
            https://learn.microsoft.com/windows/uwp/data-binding/data-binding-in-depth
            -->
                <!--<DataTemplate>-->
                <ComboBoxItem Content="Alfa"/>
                <ComboBoxItem Content="Bravo"/>
                <ComboBoxItem Content="Charly"/>
                <!--</DataTemplate>-->
            </ComboBox>

            <StackPanel Orientation="Horizontal">
                <Button x:Uid="Button_Create" IsEnabled="False" Click="CreateNewSubject"/>
                <!--{x:Bind isValidData, Converter=Negation}-->
                <Button x:Uid="Button_Edit" IsEnabled="True" Click="EditSubject"/>
                <Button x:Uid="Button_Delete" IsEnabled="True" Click="DeleteSubject"/>
            </StackPanel>

            <HyperlinkButton x:Uid="SubjectLocation" Content="Location" NavigateUri="" />
            <!--Visibility="{x:Bind SubjectLocation.Content, Converter={StringVisibilityConverter}}"-->

            <ComboBox Name="SubjectLogin" IsEditable="False">
                <!--<DataTemplate>-->
                <ComboBoxItem Content="Delta"/>
                <ComboBoxItem Content="Echo"/>
                <ComboBoxItem Content="Foxtrot"/>
                <!--</DataTemplate>-->
            </ComboBox>

            <TextBlock x:Uid="SubjectPassword" Text="Password"/>
            <ToggleSwitch Name="ShowEdittional"/>
        </StackPanel>
        <!--#endregion-->
        <!--#region Edit controls-->
        <StackPanel Name="RegionEdit" Grid.Row="1" Visibility="{x:Bind ShowEdittional.IsOn, Mode=OneWay}">
            <TextBox Name="Input_Title" Header="{StaticResource STR_Subject}"/>
            <TextBox Name="Input_Location"/>
            <TextBox Name="Input_LogIn"/>
            <PasswordBox Name="Input_Password"/>

            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <Button x:Uid="Button_Save" Click="SaveEdit" Style="{StaticResource AccentButtonStyle}" />
                <Button x:Uid="Button_Cancel" Click="CancelEdit"/>
            </StackPanel>
        </StackPanel>
        <!--#endregion-->
    </Grid>
</Window>