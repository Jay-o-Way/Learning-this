<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ChildStackStyle" TargetType="StackPanel">
        <Setter Property="Spacing" Value="8"/>
    </Style>
    <Style x:Key="PrimaryStackStyle" TargetType="StackPanel" BasedOn="{StaticResource ChildStackStyle}">
        <Setter Property="Margin" Value="12"/>
    </Style>
</ResourceDictionary>
