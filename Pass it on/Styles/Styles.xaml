<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ButtonMarginStyle" TargetType="Button">
        <Setter Property="Margin" Value="8"/>
    </Style>
    <Style x:Key="ComboMargin" TargetType="ComboBox">
        <Setter Property="Margin" Value="8"/>
    </Style>
    <Style x:Key="DropDownMarginStyle" TargetType="DropDownButton">
        <Setter Property="Margin" Value="8"/>
    </Style>
</ResourceDictionary>
